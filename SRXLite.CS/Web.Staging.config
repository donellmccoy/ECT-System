<?xml version="1.0" encoding="utf-8"?>

<!-- For more information on using web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=125889 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  
  <!-- Transform connection strings for Staging environment -->
  <connectionStrings xdt:Transform="Replace">
    <add name="SRXLite" 
         connectionString="Server=staging-server;Database=SRXLite_Staging;User ID=srx_staging;Password=CHANGE_THIS_PASSWORD;" 
         providerName="System.Data.SqlClient"/>
  </connectionStrings>
  
  <!-- Staging environment application settings -->
  <appSettings xdt:Transform="Replace">
    <add key="DeployMode" value="STAGING"/>
    <add key="DevLoginEnabled" value="N"/>
    <add key="EmailEnabled" value="Y"/>
    <add key="EmailFrom" value="staging-alerts@stanfieldsystems.com"/>
    <add key="DeveloperDebugMode" value="false"/>
    <add key="CreateLogFile" value="false"/>
  </appSettings>
  
  <!-- Staging mail settings - production-like -->
  <system.net xdt:Transform="Replace">
    <mailSettings>
      <smtp>
        <network host="staging-smtp.stanfieldsystems.com"/>
      </smtp>
    </mailSettings>
  </system.net>

  <system.web>
    <!-- Production-like settings for staging -->
    <compilation debug="false" strict="false" explicit="true" xdt:Transform="SetAttributes(debug,strict,explicit)"/>
    <customErrors mode="RemoteOnly" xdt:Transform="Replace"/>
    
    <!-- Disable trace for staging -->
    <trace enabled="false" xdt:Transform="SetAttributes(enabled)"/>
  </system.web>
  
  <!-- Staging static content - enable caching like production -->
  <system.webServer>
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00" xdt:Transform="SetAttributes(cacheControlMode,cacheControlMaxAge)" />
    </staticContent>
  </system.webServer>
</configuration>
