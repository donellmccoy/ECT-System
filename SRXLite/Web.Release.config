<?xml version="1.0" encoding="utf-8"?>

<!-- For more information on using web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=125889 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  
  <!-- Transform connection strings for Production environment -->
  <connectionStrings xdt:Transform="Replace">
    <add name="SRXLite" 
         connectionString="Server=production-server;Database=SRXLite;User ID=srx_prod;Password=CHANGE_THIS_PASSWORD;" 
         providerName="System.Data.SqlClient"/>
  </connectionStrings>
  
  <!-- Production environment application settings -->
  <appSettings xdt:Transform="Replace">
    <add key="DeployMode" value="PROD"/>
    <add key="DevLoginEnabled" value="N"/>
    <add key="EmailEnabled" value="Y"/>
    <add key="EmailFrom" value="alerts@stanfieldsystems.com"/>
    <add key="DeveloperDebugMode" value="false"/>
    <add key="CreateLogFile" value="false"/>
  </appSettings>
  
  <!-- Production mail settings -->
  <system.net xdt:Transform="Replace">
    <mailSettings>
      <smtp>
        <network host="stanfieldsystems-com.mail.protection.outlook.com"/>
      </smtp>
    </mailSettings>
  </system.net>

  <system.web>
    <!-- Production settings - optimized and secure -->
    <compilation debug="false" strict="false" explicit="true" xdt:Transform="SetAttributes(debug,strict,explicit)"/>
    <customErrors mode="On" defaultRedirect="~/AppError.aspx" xdt:Transform="Replace">
      <error statusCode="404" redirect="~/NotFound.aspx"/>
      <error statusCode="500" redirect="~/AppError.aspx"/>
    </customErrors>
  </system.web>
  
  <!-- Production static content - aggressive caching -->
  <system.webServer>
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00" xdt:Transform="SetAttributes(cacheControlMode,cacheControlMaxAge)" />
    </staticContent>
    
    <!-- Production HTTP security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Frame-Options" value="DENY" xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
        <add name="X-Content-Type-Options" value="nosniff" xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains" xdt:Transform="Insert"/>
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>
