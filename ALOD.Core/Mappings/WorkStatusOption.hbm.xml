<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="ALOD.Core"
                   namespace="ALOD.Core.Domain.Workflow">

	<class name="WorkflowStatusOption" table="core_WorkStatus_Options">
		<id name="Id" column="wso_id">
			<generator class="identity" />
		</id>

    <property name="wsStatusOut" column="ws_id_out" />
		<property name="DisplayText" column="displayText" />
		<property name="Active" column="active" />
		<property name="SortOrder" column="sortOrder" />
		<property name="Template" column="template" />
    <property name="wsStatus" column="ws_id" />
    <property name="Compo" column="Compo" />

		<many-to-one name="WorkstatusType" class="WorkStatus" column="ws_id_out" cascade="none" insert="false"  update="false" />

		<bag name="RuleList" table="core_WorkStatus_Options" cascade="save-update" inverse="false">
			<key column="wso_id"></key>
			<one-to-many class="WorkflowOptionRule" />
		</bag>
    <bag name="ActionList" table="core_WorkStatus_Actions" cascade="save-update" inverse="false">
      <key column="wso_id"></key>
      <one-to-many class="WorkflowOptionAction" />
    </bag>
  </class>
</hibernate-mapping>