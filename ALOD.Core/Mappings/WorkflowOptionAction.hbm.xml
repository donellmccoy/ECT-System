<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="ALOD.Core"
                   namespace="ALOD.Core.Domain.Workflow">

  <class name="WorkflowOptionAction" table="core_WorkStatus_Actions">
    <id name="Id" column="wsa_id">
      <generator class="identity" />
    </id>

    <property name="Data" column="data" />
    <property name="Target" column="target" />
    <many-to-one name="OptionType" class="WorkflowStatusOption" column="wso_id" cascade="none" insert="false" update="false" />
    <many-to-one name="ActionType" class="WorkflowActionTypes" column="actionType" cascade="none" insert="false" update="false" />
  </class>
</hibernate-mapping>