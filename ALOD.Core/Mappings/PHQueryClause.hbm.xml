<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="ALOD.Core"
                   namespace="ALOD.Core.Domain.Query">

  <class name="PHQueryClause" table="rpt_ph_user_query_clause">
    <id name="Id" column="Id">
      <generator class="identity" />
    </id>
    <property name="WhereType" column="WhereType" />

    <many-to-one name="Query" class="PHUserQuery" column="PHQueryId" />

    <bag name="Parameters" table="rpt_ph_user_query_param" inverse="true" cascade="all">
      <key column="PHClauseId" on-delete="cascade"></key>
      <one-to-many class="PHQueryParameter" />
    </bag>
  </class>
</hibernate-mapping>