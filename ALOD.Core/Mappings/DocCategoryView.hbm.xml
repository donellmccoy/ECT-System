<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="ALOD.Core"
                   namespace="ALOD.Core.Domain.Documents">

	<class name="DocCategoryView" table="DocCategoryView">
		<id name="Id" column="DocCatViewId">
			<generator class="identity" />
		</id>

		<bag name="Views" table="DocumentView" cascade="none" inverse="false">
			<key column="viewId"></key>
			<one-to-many class="DocumentView" />
		</bag>
    <bag name="Categories" table="DocumentCategories2" cascade="none" inverse="false">
      <key column="DocCatId"></key>
      <one-to-many class="DocumentCategory2" />
    </bag>

    <property name="ViewOrder" column="ViewOrder" />
  </class>
</hibernate-mapping>